# Tutorial biến và kiểu dữ liệu trong NH ngôn ngữ của Huy

# Biến số nguyên
set age 20
print "Tuổi:" age

# Biến chuỗi
set name "Huy"
print "Tên:" name

# Biến số âm
set delta -5
print "Delta:" delta

# Gán lại biến
set age 25
print "Tuổi mới:" age

# Nhập dữ liệu vào biến số hoặc chuỗi
input input_name
input input_age
print "Tên vừa nhập:" input_name
print "Tuổi vừa nhập:" input_age

# So sánh số với if
if input_age > 18
    print "Bạn đã đủ tuổi trưởng thành"
end

if input_age == 18
    print "Bạn vừa đủ 18 tuổi"
end

if input_age < 18
    print "Bạn chưa đủ tuổi trưởng thành"
end

# Vòng lặp lặp lại
loop 3
    print "Lặp lại 3 lần"
end

# So sánh biến số với số
if age >= 18
    print name "đủ tuổi để đi bầu cử"
end

# Kết thúc tutorial
print "Tutorial biến và kiểu dữ liệu của NH xong rồi nhé!"
